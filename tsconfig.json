{
  "compilerOptions": {
    "target": "es2015",
    "module": "es2015",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./static/js/compiled",
    "rootDir": "./static/ts",
    "declaration": true,
    "sourceMap": true
  },
  "include": ["static/ts/**/*.ts"],
  "exclude": ["node_modules"]
} 